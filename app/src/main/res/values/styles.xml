<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>
    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="rootContainerList">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/list_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/list_vertical_margin</item>
        <item name="android:paddingRight">@dimen/list_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/list_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/list_vertical_margin</item>
    </style>

    <style name="rootContainer">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/colorWindowBackground</item>
    </style>
    <style name="rootContainer.white_background" parent="@style/rootContainer">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="divider">
        <item name="android:background">?android:listDivider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>

    <style name="text_title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:lineSpacingExtra">4.0dip</item>
    </style>
    <style name="text_title.lists" parent="@style/text_title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="text_content" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8.0sp</item>
    </style>

    <style name="Fade">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="rootContainPerhatian">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/colorSakit</item>
    </style>



    <style name="CustomCardViewStyle1" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners1</item>
    </style>
    <style name="CustomCardViewStyle2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners2</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>
